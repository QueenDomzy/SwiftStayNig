# Use official Node.js LTS image
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package.json and package-lock.json first (for caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the code
COPY . .

# Build backend
RUN npm run build

# Expose port
EXPOSE 3000

# Start backend
CMD ["npm", "start"]
