{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "server",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "express"],
    "incremental": true
  },
  "include": ["server/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
